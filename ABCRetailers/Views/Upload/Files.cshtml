@model IEnumerable<ABCRetailers.Models.FileUploadModel>

@{
    ViewData["Title"] = "All Files";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>📁 File Library</h2>
        <a asp-action="Index" class="btn btn-primary">
            <i class="fas fa-upload"></i> Upload New File
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="card">
            <div class="card-body text-center">
                <i class="fas fa-folder-open text-muted" style="font-size: 3rem;"></i>
                <h5 class="mt-3">No files uploaded yet</h5>
                <p class="text-muted">Start by uploading your first file!</p>
                <a asp-action="Index" class="btn btn-primary">Upload File</a>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var file in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <small class="text-muted">@file.Category</small>
                            <span class="badge bg-primary">@file.ContentType.Split('/').Last().ToUpper()</span>
                        </div>

                        <div class="card-body">
                            <h6 class="card-title text-truncate" title="@file.FileName">
                                @file.FileName
                            </h6>

                            @if (!string.IsNullOrEmpty(file.Description))
                            {
                                <p class="card-text small text-muted">@file.Description</p>
                            }

                            <div class="mb-2">
                                <small class="text-muted">
                                    <i class="fas fa-calendar"></i> @file.UploadDate.ToString("MMM dd, yyyy HH:mm")
                                </small>
                            </div>

                            <div class="mb-2">
                                <small class="text-muted">
                                    <i class="fas fa-file"></i> @FormatFileSize(file.FileSize)
                                </small>
                            </div>

                            @if (!string.IsNullOrEmpty(file.Tags))
                            {
                                <div class="mb-3">
                                    @foreach (var tag in file.Tags.Split(',').Take(3))
                                    {
                                        <span class="badge bg-light text-dark me-1">@tag.Trim()</span>
                                    }
                                    @if (file.Tags.Split(',').Length > 3)
                                    {
                                        <span class="badge bg-light text-dark">+@(file.Tags.Split(',').Length - 3) more</span>
                                    }
                                </div>
                            }
                        </div>

                        <div class="card-footer">
                            <div class="d-grid gap-2">
                                <a href="@file.FileUrl" target="_blank" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-external-link-alt"></i> View
                                </a>
                                <a asp-action="Download" asp-route-fileName="@file.FileName" class="btn btn-outline-success btn-sm">
                                    <i class="fas fa-download"></i> Download
                                </a>
                                <form asp-action="Delete" asp-route-fileName="@file.FileName" method="post" style="display:inline">
                                    <button type="submit" class="btn btn-outline-danger btn-sm w-100"
                                            onclick="return confirm('Are you sure you want to delete this file?')">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- File Statistics -->
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="mb-0">📊 File Statistics</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-3">
                        <h4 class="text-primary">@Model.Count()</h4>
                        <small class="text-muted">Total Files</small>
                    </div>
                    <div class="col-md-3">
                        <h4 class="text-success">@Model.Sum(f => f.FileSize).ToString("N0")</h4>
                        <small class="text-muted">Total Size</small>
                    </div>
                    <div class="col-md-3">
                        <h4 class="text-info">@Model.GroupBy(f => f.Category).Count()</h4>
                        <small class="text-muted">Categories</small>
                    </div>
                    <div class="col-md-3">
                        <h4 class="text-warning">@Model.GroupBy(f => f.ContentType).Count()</h4>
                        <small class="text-muted">File Types</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@functions {
    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        int order = 0;
        double size = bytes;

        while (size >= 1024 && order < sizes.Length - 1)
        {
            order++;
            size /= 1024;
        }

        return $"{size:0.##} {sizes[order]}";
    }
}
