@{
    ViewData["Title"] = "Upload Success";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h2 class="mb-0">✅ File Uploaded Successfully!</h2>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                    </div>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <h4 class="text-success mb-3">@TempData["SuccessMessage"]</h4>
                    }

                    @if (TempData["FileUrl"] != null)
                    {
                        <div class="alert alert-info">
                            <strong>File URL:</strong><br>
                            <a href="@TempData["FileUrl"]" target="_blank" class="text-break">@TempData["FileUrl"]</a>
                        </div>
                    }

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a asp-action="Index" class="btn btn-primary me-md-2">
                            <i class="fas fa-upload"></i> Upload Another File
                        </a>
                        <a asp-action="Files" class="btn btn-secondary me-md-2">
                            <i class="fas fa-folder-open"></i> View All Files
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-home"></i> Back to Home
                        </a>
                    </div>
                </div>
            </div>

            <!-- Upload Tips -->
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="mb-0">What's Next?</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>File Management</h6>
                            <ul class="mb-0">
                                <li>View all uploaded files</li>
                                <li>Download files when needed</li>
                                <li>Delete files you no longer need</li>
                                <li>Organize files with categories and tags</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6>Security Features</h6>
                            <ul class="mb-0">
                                <li>Files are stored securely in Azure</li>
                                <li>Each file has a unique identifier</li>
                                <li>Access control and monitoring</li>
                                <li>Audit trail for all operations</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
