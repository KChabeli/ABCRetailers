@model IEnumerable<ABCRetailers.Models.Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mb-5">
    <h1 class="display-4">🏪 Welcome to ABC Retailers</h1>
    <p class="lead">Discover our amazing products at great prices!</p>
</div>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.ProductName" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="fas fa-image fa-3x text-muted"></i>
                        </div>
                    }

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@product.ProductName</h5>
                        <p class="card-text text-muted">@product.Description</p>

                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="h4 text-primary mb-0">@product.Price.ToString("C")</span>
                                <span class="badge @(product.StockQuantity > 0 ? "bg-success" : "bg-danger")">
                                    @(product.StockQuantity > 0 ? "In Stock" : "Out of Stock")
                                </span>
                            </div>

                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">Stock: @product.StockQuantity</small>
                                <div>
                                    <a href="@Url.Action("Details", "Product", new { id = product.RowKey })"
                                       class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-eye"></i> View Details
                                    </a>
                                    @if (product.StockQuantity > 0)
                                    {
                                        <a href="@Url.Action("Create", "Order")"
                                           class="btn btn-primary btn-sm ms-1">
                                            <i class="fas fa-shopping-cart"></i> Order Now
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Product")" class="btn btn-outline-secondary btn-lg">
            <i class="fas fa-list"></i> View All Products
        </a>
    </div>
}
else
{
    <div class="text-center">
        <div class="alert alert-info" role="alert">
            <i class="fas fa-info-circle fa-2x mb-3"></i>
            <h4>No Products Available</h4>
            <p>We're currently setting up our product catalog. Please check back soon!</p>
            <a href="@Url.Action("Create", "Product")" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add First Product
            </a>
        </div>
    </div>
}
