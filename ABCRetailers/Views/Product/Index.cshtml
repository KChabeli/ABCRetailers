@model IEnumerable<ABCRetailers.Models.Product>
@{
    ViewData["Title"] = "Products";
}

<h2>Products</h2>
<p><a class="btn btn-primary" asp-action="Create">Add Product</a></p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Partition Key</th>
            <th>Row Key</th>
            <th>Product Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stock Quantity</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.PartitionKey</td>
                <td>@product.RowKey</td>
                <td>@product.ProductName</td>
                <td>@product.Description</td>
                <td>@product.Price.ToString("C")</td>
                <td>@product.StockQuantity</td>
                <td>
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" alt="@product.ProductName" style="max-width:100px; max-height:100px;" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@product.RowKey">Edit</a>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@product.RowKey">Details</a>
                    <form asp-action="Delete" asp-route-id="@product.RowKey" method="post" style="display:inline">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this product?');">Delete</button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
