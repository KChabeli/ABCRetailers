@model ABCRetailers.Models.Customer

@{
    ViewData["Title"] = "Details";
}

<h1>Customer Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-3">Partition Key</dt>
        <dd class="col-sm-9">@Model.PartitionKey</dd>
        <dt class="col-sm-3">Row Key</dt>
        <dd class="col-sm-9">@Model.RowKey</dd>
        <dt class="col-sm-3">First Name</dt>
        <dd class="col-sm-9">@Model.FirstName</dd>
        <dt class="col-sm-3">Last Name</dt>
        <dd class="col-sm-9">@Model.LastName</dd>
        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>
        <dt class="col-sm-3">Shipping Address</dt>
        <dd class="col-sm-9">@Model.ShippingAddress</dd>
    </dl>
</div>

<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.RowKey">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    <form asp-action="Delete" asp-route-id="@Model.RowKey" method="post" style="display:inline">
        <button type="submit" class="btn btn-danger" onclick="return confirm('Delete this customer?');">Delete</button>
    </form>

</div>


