@model IEnumerable<ABCRetailers.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Partition Key</th>
            <th>Row Key</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Shipping Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PartitionKey</td>
                <td>@item.RowKey</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Email</td>
                <td>@item.ShippingAddress</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.RowKey">Edit</a>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.RowKey">Details</a>
                    <form asp-action="Delete" asp-route-id="@item.RowKey" method="post" style="display:inline">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this customer?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
