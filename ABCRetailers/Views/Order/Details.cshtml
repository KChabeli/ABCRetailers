@model ABCRetailers.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>📋 Order Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-3">Partition Key</dt>
        <dd class="col-sm-9">@Model.PartitionKey</dd>
        <dt class="col-sm-3">Row Key</dt>
        <dd class="col-sm-9">@Model.RowKey</dd>
        <dt class="col-sm-3">Customer</dt>
        <dd class="col-sm-9">
            @{
                var customerName = ViewBag.CustomerName ?? Model.CustomerId;
            }
            @customerName
        </dd>
        <dt class="col-sm-3">Product</dt>
        <dd class="col-sm-9">
            @{
                var productName = ViewBag.ProductName ?? Model.ProductId;
            }
            @productName
        </dd>
        <dt class="col-sm-3">Order Date</dt>
        <dd class="col-sm-9">@Model.OrderDate.ToShortDateString()</dd>
        <dt class="col-sm-3">Quantity</dt>
        <dd class="col-sm-9">@Model.Quantity</dd>
        <dt class="col-sm-3">Unit Price</dt>
        <dd class="col-sm-9">@Model.UnitPrice.ToString("C")</dd>
        <dt class="col-sm-3">Total Price</dt>
        <dd class="col-sm-9">@Model.TotalPrice.ToString("C")</dd>
        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>
    </dl>
</div>

<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.RowKey">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    <form asp-action="Delete" asp-route-id="@Model.RowKey" method="post" style="display:inline">
        <button type="submit" class="btn btn-danger" onclick="return confirm('Delete this order?');">Delete</button>
    </form>
</div>


